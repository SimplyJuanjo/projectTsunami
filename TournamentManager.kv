MainScreen:

<MainScreen>:
    Button:
        text: 'Start Tournament'
        on_press: root.manager.current = 'tournament'

<TournamentScreen>:
    TournamentBox:

<TournamentSettings>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Tournament Settings'
        ToggleButton:
            text: 'Tournament Mode'
            on_press: root.manager.current = 'tournament'


<TournamentBox>:
    #Generate a layout with 2 vertical boxes one with buttons and the other with labels
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Create TEAM'
            on_press: root.add_team()
        Button:
            text: 'Edit TEAMS'
            on_press: root.edit_teams()
        Button:
            text: 'Delete TEAMS'
            on_press: root.delete_teams()
        Button:
            text: 'Settings'
            on_press: app.root.current = 'settings'
        Button:
            text: 'Start TOURNAMENT'
            on_press: root.start_tournament()
    ScrollView:
        #Generate a scrollable list of TEAMS generated by the button presses
        GridLayout:
            id: grid
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            spacing: 10
            padding: 10
            Label:
                text: 'TEAM NAME'

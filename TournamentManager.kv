StartScreen:

<StartScreen>:
    Button:
        text: 'Start APP'
        on_press: root.manager.current = 'main'

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Preset Tournaments'
            size_hint_y: 0.2
            font_size: 30
        GridLayout:
            rows: 2
            cols: 2
            size_hint_y: 0.5
            height: self.minimum_height
            Button:
                text: 'Tournament 1'
                on_press: print('tournament1')
            Button:
                text: 'Tournament 2'
                on_press: print('tournament2')
            Button:
                text: 'Tournament 3'
                on_press: print('tournament3')
            Button:
                text: 'Tournament 4'
                on_press: print('tournament4')
        Button:
            text: 'CREATE New Tournament'
            size_hint_y: 0.3
            on_press: root.manager.current = 'settings'

<TournamentScreen>:
    TournamentBox:

<TournamentSettings>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Tournament Settings'
            font_size: 30
            size_hint_y: 0.2
        Label:
            id: slider_label_mode
            text: 'Choose Tournament Mode:'
            size_hint_y: 0.2
        Slider:
            id: slider_mode
            min: 0
            max: 2
            step: 1
            size_hint_y: 0.2
            on_value: root.on_slider_mode(slider_mode.value)
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Switch:
                id: switch_ko_pro
                disabled: False
                on_active: root.on_switch_ko_pro(switch_ko_pro.active)
            Label:
                id: switch_label_ko_pro
                text: 'Pro/KO'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Switch:
                id: switch_ko_master
                disabled: False
                on_active: root.on_switch_ko_master(switch_ko_master.active)
            Label:
                id: switch_label_ko_master
                text: 'Master/KO'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Switch:
                id: switch_ko_advanced
                disabled: False
                on_active: root.on_switch_ko_advanced(switch_ko_advanced.active)
            Label:
                id: switch_label_ko_advanced
                text: 'Advanced/KO'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Switch:
                id: switch_button_classification
                on_active: root.on_switch_classification(switch_button_classification.active)       
            Label:
                id: switch_label_classification
                text: 'Classification'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Switch:
                id: switch_button_groups
                on_active: root.on_switch_groups(switch_button_groups.active)
            Label:
                id: switch_label_groups
                text: 'Order of Groups'
        Button:
            text: 'Modify TEAMS'
            on_press: root.manager.current = 'tournament'


<TournamentBox>:
    #Generate a layout with 2 vertical boxes one with buttons and the other with labels
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Create TEAM'
            on_press: root.add_team()
        Button:
            text: 'Edit TEAMS'
            on_press: root.edit_teams()
        Button:
            text: 'Delete TEAMS'
            on_press: root.delete_teams()
        Button:
            text: 'Settings'
            on_press: app.root.current = 'settings'
        Button:
            text: 'Start TOURNAMENT'
